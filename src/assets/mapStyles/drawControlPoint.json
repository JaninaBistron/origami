[
      {
        "id": "gl-draw-point-inactive",
        "type": "circle",
        "filter": [
          "all",
          ["==", "active", "false"],
          ["==", "$type", "Point"],
          ["==", "meta", "feature"],
          ["!=", "mode", "static"]
        ],
        "paint": {
          "circle-radius": 8,
          "circle-color": "#3dc2ff",
          "circle-stroke-width": 4,
          "circle-stroke-color": "#fff"
        }
      },
      {
        "id": "gl-draw-point-active",
        "type": "circle",
        "filter": [
          "all",
          ["==", "$type", "Point"],
          ["!=", "meta", "midpoint"],
          ["==", "active", "true"]
        ],
        "paint": {
          "circle-radius": 8,
          "circle-color": "#3dc2ff",
          "circle-stroke-width": 6,
          "circle-stroke-color": "#fff"
        }
      }
]